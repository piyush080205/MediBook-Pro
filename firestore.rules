/**
 * @fileoverview Firestore Security Rules for MediBook Pro.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and appointments,
 * while allowing public read access to doctor and clinic information. Write access to
 * logging collections is restricted to prevent unauthorized modifications.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - Doctor and clinic information is publicly readable to facilitate discovery.
 * - Write access to all log collections is restricted to the backend (simulated by `if false`).
 * - All destructive operations (update, delete) require verifying the document's existence.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Secure access to user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is disallowed for privacy.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to doctor profiles.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to clinic information.
     */
    match /clinics/{clinicId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Secure access to appointments.
     */
    match /users/{userId}/appointments/{appointmentId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.patientId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(userId);
    }

    // --- LOGGING & OPERATIONAL COLLECTIONS (Backend/Admin Write Only) ---

    /**
     * @description Restricts write access to triage logs.
     */
    match /triage_logs/{triageLogId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
    
    /**
     * @description Restricts write access to load balancer logs.
     */
    match /load_balancer_logs/{logId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts write access to queue history.
     */
    match /queue_history/{queueHistoryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts write access to OCR results.
     */
    match /ocr_results/{resultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts write access to reschedule logs.
     */
    match /reschedule_logs/{logId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}

    